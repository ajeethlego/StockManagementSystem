@model IEnumerable<Stock4.Models.StockList>

@{
    ViewData["Title"] = "Index";
    Layout = "_LogoutLayout";

}

<h1>Index</h1>
<p>
    <a asp-action="Create" class="btn btn-secondary" role="button">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StockId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StockName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StockPrice)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.StockId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StockName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StockPrice)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.StockId" class="btn btn-warning" role="button">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.StockId" class="btn btn-info" role="button">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.StockId" class="btn btn-danger" role="button">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div>
    <a asp-controller="Admin" asp-action="AdminHomePage" class="btn btn-secondary" role="button">Back</a>
</div>
