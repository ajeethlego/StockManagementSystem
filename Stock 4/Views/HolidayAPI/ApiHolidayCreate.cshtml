@model Stock_4.Models.API_HolidayLocal

@{
    ViewBag.Title = Model != null ? "ApiHolidayEdit" : "ApiHolidayCreate";
}

<h2>@ViewBag.Title</h2>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ApiHolidayCreate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Occasion" class="control-label"></label>
                <input asp-for="Occasion" class="form-control" />
                <span asp-validation-for="Occasion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
