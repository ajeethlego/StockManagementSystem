@model IEnumerable<Stock_4.Models.API_HolidayLocal>

@{
    ViewData["Title"] = "ApiHolidayIndex";
    Layout = "_LogoutLayout";

}

<h1>Holiday List</h1>

<p>
    <a asp-action="ApiHolidayCreate">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Occasion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Occasion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                    <a asp-action="ApiHolidayEdit" asp-route-id="@item.Id" class="btn btn-warning" role="button">Edit</a>
                    <a asp-action="ApiHolidayDelete" asp-route-id="@item.Id" class="btn btn-danger" role="button">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
