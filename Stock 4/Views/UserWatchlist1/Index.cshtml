@model IEnumerable<Stock4.Models.UserWatchlist1>

@{
    ViewData["Title"] = "Index";
    Layout = "_logoutuser";

}
<table class="table">
    <thead>
        <tr>
            <th>Stock Name</th>
            <th>Current Stock Price</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Stock.StockName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Stock.StockPrice)
                </td>
                <td>
                    <div>
                        <form asp-action="Remove"
                            asp-controller="UserWatchlist1"
                            asp-route-Id="@item.Id">
                            <input type="submit" value="Remove!" class="btn btn-danger" /> 
                        </form>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-controller="ValidUser" asp-action="ValidUserIndex" class="btn btn-secondary" role="button">Back to Stocks</a>
</div>
